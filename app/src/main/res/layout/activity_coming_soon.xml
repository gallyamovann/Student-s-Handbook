<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="ВЕРНУТЬСЯ НАЗАД"
        android:layout_width="326dp"
        android:layout_height="118dp" android:id="@+id/backToChosing"
        android:layout_marginTop="57dp"
        app:layout_constraintTop_toBottomOf="@+id/commingsoon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_background"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="340dp"
        android:layout_marginTop="22dp"
        app:layout_constraintBottom_toTopOf="@+id/commingsoon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dog2" />

    <TextView
        android:id="@+id/commingsoon"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:fadeScrollbars="false"
        android:filterTouchesWhenObscured="false"
        android:fitsSystemWindows="false"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="COMING SOON"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/purple_500"
        android:textColorHighlight="@color/purple_500"
        app:layout_constraintBottom_toTopOf="@+id/backToChosing"
        app:layout_constraintEnd_toEndOf="@+id/backToChosing"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/backToChosing"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.453" />
</androidx.constraintlayout.widget.ConstraintLayout>